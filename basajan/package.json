{
	"name": "basajan-hugo-theme",
	"version": "0.1.0",
	"private": true,
	"description": "Just a simple white blog theme for Hugo",
	"keywords": [
		"hugo",
		"simple",
		"basajan"
	],
	"homepage": "https://github.com/hapakaien/hugo-themes/tree/main/basajan#readme",
	"bugs": {
		"url": "https://github.com/hapakaien/hugo-themes/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/hapakaien/hugo-themes.git"
	},
	"license": "Apache-2.0",
	"author": "Ahmad Husen",
	"main": "index.js",
	"scripts": {
		"dev": "HUGO_THEME_ENV=development hugo -s exampleSite --themesDir=../.. server -p 3000",
		"build": "HUGO_THEME_ENV=production hugo -s exampleSite --themesDir=../.. --gc --minify",
		"copy": "cp -f exampleSite/public/css/*.min.css assets/css",
		"start": "serve exampleSite/public"
	},
	"dependencies": {
		"@tailwindcss/typography": "0.4.1",
		"autoprefixer": "10.4.2",
		"cssnano": "5.1.1",
		"tailwindcss": "2.2.19"
	},
	"devDependencies": {
		"postcss": "8.4.8",
		"postcss-cli": "9.1.0",
		"serve": "13.0.2",
		"sort-package-json": "1.54.0"
	}
}
